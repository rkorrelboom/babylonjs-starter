{
  "name": "babylonjs-starter",
  "version": "1.0.0",
  "description": "BabylonJS starter",
  "scripts": {
    "clean": "rm -rf dist",
    "start": "nodemon --exec ./node_modules/.bin/ts-node -- ./bin/server.ts",
    "start:prod": "NODE_ENV=production ts-node ./bin/server.ts",
    "build": "npm run clean && webpack --config src/config/webpack.prod.ts --progress --profile --bail"
  },
  "author": "Remy Korrelboom",
  "license": "ISC",
  "dependencies": {
    "babylonjs": "^3.0.0-alpha",
    "debug": "^2.6.6",
    "express": "^4.15.2"
  },
  "devDependencies": {
    "@types/debug": "0.0.29",
    "@types/express": "^4.0.35",
    "@types/node": "^7.0.18",
    "@types/webpack": "^2.2.15",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.28.1",
    "file-loader": "^0.11.1",
    "html-loader": "^0.4.5",
    "html-webpack-plugin": "^2.28.0",
    "nodemon": "^1.11.0",
    "null-loader": "^0.1.1",
    "rimraf": "^2.6.1",
    "style-loader": "^0.17.0",
    "ts-loader": "^2.0.3",
    "ts-node": "^3.0.4",
    "typescript": "^2.3.2",
    "webpack": "^2.5.1",
    "webpack-dev-middleware": "^1.10.2",
    "webpack-merge": "^4.1.0"
  }
}
